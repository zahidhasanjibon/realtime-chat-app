<section class="hero py-16">
  <div
    class="wrapper container mx-auto flex justify-between items-center px-12"
  >
    <div class="w-3/5">
      <h6 class="text-lg"><em>Are You Hungry?</em></h6>
      <h1 class="text-6xl font-bold">Don't wait!</h1>
      <button
        class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
      >
        Order Now
      </button>
    </div>
    <div class="w-2/5">
      <img src="/img/hero-pizza.png" />
    </div>
  </div>
</section>
<!-- hero section ends here -->

<!-- menu section starts here -->

<section class="menu container mx-auto py-6 px-12">
  <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
  <div class="grid grid-cols-4 gap-x-8 justify-items-center gap-y-16">
    <% data.forEach((pizza) => { %>
    <div class="w-64">
      <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
        <span class="size py-1 px-4 uppercase rounded-full text-xs"
          ><%= pizza.size%></span
        >
        <div class="flex items-center justify-around mt-6">
          <span class="text-lg font-bold">$<%= pizza.price %></span>
          <button
            data-pizza="<%= JSON.stringify(pizza) %>"
            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">ADD</span>
          </button>
        </div>
      </div>
    </div>

    <% }) %>
  </div>
</section>
